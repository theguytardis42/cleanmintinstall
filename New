sudo apt install ffmpeg
ffplay -nodisp -autoexit -loop 0 /usr/local/share/silence.wav
sudo nano /etc/systemd/system/silence-audio.service
##################################################
[Unit]
Description=Play silent audio with ffplay to keep receiver awake
After=default.target

[Service]
ExecStart=/usr/bin/ffplay -nodisp -autoexit -loop 0 /usr/local/share/silence.wav
Restart=always
StandardOutput=null
StandardError=null

[Install]
WantedBy=multi-user.target
################################################
sudo systemctl daemon-reexec
sudo systemctl enable silence-audio.service
sudo systemctl start silence-audio.service
########
# Generate 1-hour silent WAV and move it to /usr/local/share
sox -n -r 48000 -c 2 silence.wav trim 0.0 3600.0 && \
sudo mv silence.wav /usr/local/share/silence.wav

# Install ffmpeg (for ffplay)
sudo apt update && sudo apt install -y ffmpeg

# Create and enable systemd service
echo "[Unit]
Description=Play silent audio with ffplay to keep receiver awake
After=default.target

[Service]
ExecStart=/usr/bin/ffplay -nodisp -autoexit -loop 0 /usr/local/share/silence.wav
Restart=always
StandardOutput=null
StandardError=null

[Install]
WantedBy=multi-user.target" | sudo tee /etc/systemd/system/silence-audio.service > /dev/null && \
sudo systemctl daemon-reexec && \
sudo systemctl enable silence-audio.service && \
sudo systemctl start silence-audio.service
